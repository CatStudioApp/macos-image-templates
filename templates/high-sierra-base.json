{
  "builders": [
    {
      "type": "veertu-anka",
      "vm_name": "high-sierra-base",
      "installer_app": "/Applications/Install macOS High Sierra.app/",
      "cpu_count": "2",
      "ram_size": "4G",
      "disk_size": "80G"
    }
  ],
  "provisioners": [
    {
      "inline": [
        "echo 'Disabling spotlight...'",
        "sudo mdutil -a -i off"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "yes '' | ruby -e \"$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)\""
      ],
      "type": "shell"
    },
    {
      "inline": [
        "echo \"export LANG=en_US.UTF-8\" >> ~/.profile",
        "echo \"export PATH=/usr/local/bin:$PATH\" >> ~/.profile",
        "source ~/.profile"
      ],
      "type": "shell"
    },
    {
      "inline": [
        "brew --version",
        "brew update",
        "brew install wget"
      ],
      "type": "shell"
    }
  ]
}